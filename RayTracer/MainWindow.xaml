<Window x:Class="Charybdis.RayTracer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Charybdis.RayTracer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500" PreviewKeyDown="Window_PreviewKeyDown">
    <DockPanel LastChildFill="True">
        <!--<TextBox Name="TxtMap" Width="350" DockPanel.Dock="Right" FontFamily="Consolas" />-->
        <DockPanel LastChildFill="True">
            <StatusBar DockPanel.Dock="Bottom">
                <!--<StatusBarItem Name="sbiUpdates"/>-->
                <StatusBarItem Name="sbiPosition"/>
                <StatusBarItem Name="sbiFacing"/>
                <StatusBarItem Name="sbiThread"/>
            </StatusBar>
            <Image Name="ImgControl" Stretch="Fill" StretchDirection="Both" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </DockPanel>
    </DockPanel>
</Window>